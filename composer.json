{
    "name": "workivate/php-saml",
    "description": "Workivate version of OneLogin PHP SAML Toolkit",
    "license": "MIT",
    "homepage": "https://developers.onelogin.com/saml/php",
    "keywords": ["saml", "saml2", "onelogin"],
    "autoload": {
        "psr-4": {
            "OneLogin\\": "src/"
        }
    },
    "support": {
        "email": "sixto.garcia@onelogin.com",
        "issues": "https://github.com/workivate/php-saml/issues",
        "source": "https://github.com/workivate/php-saml/"
    },
    "require": {
        "php": ">=7.3",
        "robrichards/xmlseclibs": ">=3.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.2",
        "php-coveralls/php-coveralls": "^2.0",
        "pdepend/pdepend": "^2.8.0",
        "squizlabs/php_codesniffer": "^3.5.8",
        "vimeo/psalm": "^4.6"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "suggest": {
        "ext-openssl": "Install openssl lib in order to handle with x509 certs (require to support sign and encryption)",
        "ext-curl": "Install curl lib to be able to use the IdPMetadataParser for parsing remote XMLs",
        "ext-dom": "Install xml lib",
        "ext-zlib": "Install zlib"
    }
}
